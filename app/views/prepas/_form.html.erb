
<%= form_for(@prepa) do |f| %>
  <% if @prepa.errors.any? %>
    <div id="error_explanation">
      <h2 class="red">Il semble qu'il y ait un petit problème...</h2>
        <ul>
        <% @prepa.errors.messages.each do |msg| %>
          <li><strong><%= msg[1][0] %></strong></li>
        <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Nom</label>
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <label>Ville</label>
    <%= f.text_field :ville %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Créer la prépa", class: 'btn btn-primary' %>
  </div>
<% end %>
