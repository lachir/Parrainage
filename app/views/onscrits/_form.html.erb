<%= form_for(@onscrit, html: { multipart: true }) do |f| %>
  <% if @onscrit.errors.any? %>
    <div id="error_explanation">
      <h2 class="red">Il semble qu'il y ait un petit problème...</h2>
        <ul>
        <% @onscrit.errors.messages.each do |msg| %>
          <li><strong><%= msg[1][0] %></strong></li>
        <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Prénom</label>
    <%= f.text_field :prenom %>
  <div class="field">
    <label>Nom</label>
    <%= f.text_field :nom %>
  </div>
  </div>
  <div class="field">
    <label>Date de naissance</label>
    <%= f.date_select :naissance, start_year: Time.now.year - 30, end_year: Time.now.year - 10, order: [:day, :month, :year], default: { day: 1, month: 1, year: 1993 }, with_css_classes: true, use_month_names: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'] %>
  </div>
  <div class="field">
    <label>Num's de monôme</label>
    <%= f.number_field :num %>
  </div>
  <div class="field">
    <label>Classe prépa</label>
    <%= collection_select(:onscrit, :prepa_id, Prepa.all, :id, :nom) %>
  </div>
  <div class="field">
    <label>Photo</label>
    <%= f.file_field :photo %>
  </div>
  <br><br>

  <div class="actions">
    <%= f.submit "Créer le .onscrit", class: 'btn btn-primary' %>
  </div>
<% end %>
