<%= form_for(@semaine) do |f| %>
  <% if @semaine.errors.any? %>
    <div id="error_explanation">
      <h2 class="red">Il semble qu'il y ait un petit problème...</h2>
        <ul>
        <% @semaine.errors.messages.each do |msg| %>
          <li><strong><%= msg[1][0] %></strong></li>
        <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Nom</label>
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <label>Description</label>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <label>Date de début</label>
    <%= f.date_select :startdate %>
  </div>
  <div class="field">
    <label>Date de fin</label>
    <%= f.date_select :enddate %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
