<div class="container text-center">
	<h1 class="blue">Connexion PG</h1>
	
	<%= form_tag login_path do |f| %>
		<div class="field">
	      <label>Fam'ss</label>
	      <%= text_field_tag :fam, nil, class: 'inputfam' %>
	      <span class="btn btnmicro" id="micro">µ</span>
	    </div>
	    <div class="field">
	      <label>Mot de passe</label>
	      <%= password_field_tag :password %>
	    </div>
	    <div class="actions">
	      <%= submit_tag "Go !", class: 'btn btn-large btn-primary' %>
	    </div>
    <% end %>
</div>

<script>
	$('#micro').click(function(){
		$('#fam').val($('#fam').val()+'µ');
		$('#fam').focus();
	});
</script>