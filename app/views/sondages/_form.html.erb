<%= form_for(@sondage) do |f| %>
  <% if @sondage.errors.any? %>
    <div id="error_explanation">
      <h2 class="red">Il semble qu'il y ait un petit problème...</h2>
        <ul>
        <% @sondage.errors.messages.each do |msg| %>
          <li><strong><%= msg[1][0] %></strong></li>
        <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Nom</label>
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <label>Description</label>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <label>Nombre de choix possible</label>
    <%= f.number_field :nbchoix %>
  </div>
  <div class="field">
    <label>Date et heure de début</label>
    <%= f.datetime_select :startdate, with_css_classes: true %>
  </div>
  <div class="field">
    <label>Date et heure de fin</label>
    <%= f.datetime_select :enddate, with_css_classes: true %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Créer le sondage', class: 'btn btn-primary' %>
  </div>
<% end %>
